@inject IJSRuntime JSRuntime

<body class="animate-fade-in relative z-10 flex w-full transform flex-col rounded-xl bg-gray-100 p-8 shadow-2xl ease-in-out">
    <div class="mb-8 flex-shrink-0">
        <img src="images/profile.jpeg" class="h-40 w-40 rounded-full border-4 border-gray-600 object-cover shadow-lg hover:scale-110">
    </div>

    <div class="text-left">
        <h1 class="mb-4 text-4xl text-gray-900">
            Jakob Min Stryhn
        </h1>
        <p class="mb-6 text-xl font-semibold text-blue-900">
          
            Senior Software Engineer at Danish Safety Technology Authority
        </p>
        <p class="text-md mb-8 leading-relaxed text-gray-700">
            I do code and stuff - DISCLAIMER: I am currently still working on this page
        </p>
        <div class="flex flex-wrap justify-start gap-4">
            @* Left Button*@
            <button onclick="@DownloadResume" class="transform cursor-pointer rounded-lg bg-indigo-600 px-6 py-3 font-semibold text-white hover:bg-indigo-700">
                Get my resume
                </button>

            @* Right Button*@

            <a href="/resume" class="transform rounded-lg border border-indigo-600 px-6 py-3 font-semibold text-indigo-800 hover:bg-indigo-50">Check out the interactive resume</a>
        </div>
    </div>
</body>
@code {

    private async void DownloadResume()
    {
        Console.WriteLine("Hej");
        await JSRuntime.InvokeVoidAsync("downloadResumeFile");
    }
}
