@inject IJSRuntime JSRuntime

<div class="animate-fade-in bg-white relative z-10 flex w-full transform flex-col rounded-xl p-8 opacity-80 shadow-2xl ease-in-out">

    <div class="mb-8 flex-shrink-0">
        <img src="images/profile.jpeg" class="border-gray-600 h-40 w-40 rounded-full border-4 object-cover shadow-lg hover:scale-110 md:h-48 md:w-48">
    </div>

    <div class="text-center md:text-left">
        <h1 class="text-gray-900 mb-4 text-4xl leading-tight font-extrabold">
            Jakob Min Stryhn
        </h1>
        <p class="text-blue-900 mb-6 text-xl font-semibold">
          
            Senior Software Engineer at Danish Safety Technology Authority
        </p>
        <p class="text-md text-gray-700 mb-8 leading-relaxed">
            I do code and stuff - DISCLAIMER: I am currently still working on this page
        </p>
        <div class="flex flex-wrap justify-start gap-4">
            @* Left Button*@
            <button onclick="@DownloadResume" class="bg-indigo-600 text-white transform cursor-pointer rounded-lg px-6 py-3 font-semibold hover:bg-indigo-700">
                Get my resume
                </button>

            @* Right Button*@

            <a href="/resume" class="border-indigo-600 text-indigo-800 transform rounded-lg border px-6 py-3 font-semibold hover:bg-indigo-50">Check out the interactive resume</a>
        </div>
    </div>
</div>
@code {

    private async void DownloadResume()
    {
        Console.WriteLine("Hej");
        await JSRuntime.InvokeVoidAsync("downloadResumeFile");
    }
}
